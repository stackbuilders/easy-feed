name:                 easy-feed
version:              0.1.0
cabal-version:        >= 1.10
license:              BSD3
license-file:         LICENSE.md
author:               Mark Karpov <markkarpov@openmailbox.org>
maintainer:           Mark Karpov <markkarpov@openmailbox.org>
homepage:             https://github.com/mrkkrp/easy-feed
bug-reports:          https://github.com/mrkkrp/easy-feed/issues
category:             Text
synopsis:             Straightforward and efficient generation of feeds
build-type:           Simple
description:          Straightforward and efficient generation of feeds.
extra-doc-files:      CHANGELOG.md
                    , README.md
data-files:           templates/*.mustache

source-repository head
  type:               git
  location:           https://github.com/stackbuilders/easy-feed.git

flag dev
  description:        Turn on development settings.
  manual:             True
  default:            False

library
  build-depends:      aeson            >= 0.11  && < 1.2
                    , base             >= 4.7   && < 5.0
                    , bytestring       >= 0.10  && < 0.11
                    , file-embed       >= 0.0.9
                    , megaparsec       >= 5.0   && < 6.0
                    , stache           >= 0.1.7 && < 0.3
                    , template-haskell >= 2.10  && < 2.12
                    , text             >= 1.2   && < 1.3
                    , these            >= 0.7   && < 0.8
                    , time             >= 1.4   && < 1.8
  exposed-modules:    Text.Feed.RSS
                    , Text.Feed.Atom
  if flag(dev)
    ghc-options:      -Wall -Werror
  else
    ghc-options:      -O2 -Wall
  default-language:   Haskell2010

test-suite tests
  main-is:            Spec.hs
  hs-source-dirs:     tests
  type:               exitcode-stdio-1.0
  build-depends:      base             >= 4.7 && < 5.0
                    , easy-feed        >= 0.1.0
                    , hspec            >= 2.0 && < 3.0
                    , text             >= 1.2 && < 1.3
                    , time             >= 1.4 && < 1.8
                    , these            >= 0.7 && < 0.8
  other-modules:      Text.Feed.RSSSpec
                    , Text.Feed.AtomSpec
  if flag(dev)
    ghc-options:      -Wall -Werror
  else
    ghc-options:      -O2 -Wall
  default-language:   Haskell2010
